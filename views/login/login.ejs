<form method="post" action="/users/sign-in">
  <div class="row">
    <div class="col-12">
      <div class="form-group ">
        <input id="username" name="username" type="text" class="form-control" placeholder="Username" required>
      </div>
    </div>
    <div class="col-12">
      <div class="form-group">
        <input id="password" name="password" type="password" class="form-control" placeholder="Password" required>
      </div>
    </div>
    <% if (error) { %>
      <div class="col-12">
        <div class="alert alert-danger" role="alert">
          <%= error %>
        </div>
      </div>
      <% } %>
      <div class="col-3">
        <div class="form-group">
          <input type="submit" class="btn btn-primary form-control" value="Sign In">
        </div>
      </div>

  </div>
</form>
<div class="form-group or glow">-OR-</div>
<div class="form-group row">
  <div class="col-3">
    <a href="/users/auth/facebook">
      <button class="btn btn-social btn-facebook">
      <div class="fa fa-facebook"></div><div>Sign In</div>
      </button>
    </a>
  </div>
  <div class="col-3">
    <a href="/users/auth/facebook">
      <button class="btn btn-social btn-google">
      <div class="fa fa-google"></div><div>Sign In</div>
      </button>
    </a>
  </div>
</div>
