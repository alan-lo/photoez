<form method="post" action="/users/register">
  <div class="row">
    <% if (!errors.hasOwnProperty('firstname')) { %>
      <% if (!Object.prototype.hasOwnProperty.call(body,'firstname')) { %>
      <div class="col-md-6">
        <div class="form-group">
          <input id="firstname" name="firstname" type="text" class="form-control"  placeholder="First name" value="<%= body.firstname %>" required>
        </div>
      </div>
      <% } else { %>
        <div class="col-md-6">
          <div class="form-group has-success">
            <input id="firstname" name="firstname" type="text" class="form-control form-control-success"  placeholder="First name" value="<%= body.firstname %>" required>
          </div>
        </div>
      <% } %>
    <% } else { %>
      <div class="form-group has-danger">
        <div class="col-md-6">
          <input id="firstname" name="firstname" type="text" class="form-control  form-control-danger"  placeholder="First name" required>
        </div>
      </div>
    <% } %>
      <% if (!errors.hasOwnProperty('lastname')) { %>
        <% if (!Object.prototype.hasOwnProperty.call(body,'lastname')) { %>
