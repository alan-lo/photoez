<% let uploadImage = false %>
<%- include('../partials/header.ejs', {uploadImage}) %>
<div id="posts-container" class="container">
  <div class="row">
    <div class="col">
      <div id="likedPosts">
        <span class="glow">Liked Posts</span>
      </div>
    </div>
  </div>
  <div class="row parent-container">
      <% likes.forEach(function(like) { %>
        <div class="col-sm-4">
          <div class="post">
            <a href="<%= like.Post.imageURL %>">
              <img class="img-fluid" src="<%= like.Post.imageURL %>" alt="User Image">
            </a>
            <div class="overlay-content">
              <div class="d-flex justify-content-center align-items-center">
                <i class="fa fa-heart" aria-hidden="true"></i>
              </div>
              <div class="d-flex justify-content-center align-items-center">
                <i class="fa fa-user-circle" aria-hidden="true"></i> &nbsp;
                <div class="author"><%= like.Post.User.firstName%></div>
                <div class="postId"><%= like.Post.id %></div>
              </div>
            </div>
          </div>
      </div>
    <% }) %>
  </div>
</div>
<%- include('../upload/upload-modal.ejs') %>
<%- include('../partials/footer.ejs') %>
