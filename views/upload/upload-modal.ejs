<div class="modal fade" id="image-upload-modal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Upload Image</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container">
          <form id="upload-form" method="post" enctype="multipart/form-data" action="/uploads">
            <div class="form-group row">
              <label for="select-album">Select Album </label>
              <select name="albumList" class="form-control" id="album-list" required>
              <option value="">Please select album</option>
              </select>
            </div>
            <div class="form-group row">
              <div class="col">
                <input name="filename" type="file" class="form-control-file" required>
              </div>
            </div>
            <div class="form-group row">
              <div class="col-4">
                <input id="upload-btn" type="submit" value="Upload" class="btn btn-primary">
              </div>
            </div>
        </form>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
