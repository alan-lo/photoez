<%- include('./partials/header.ejs') %>
<div class="photo-frame container">
  <div id="main" class="container">
    <div class="row">
      <div id="main-a" class="col-lg-6 d-flex flex-column">
        <div class="row">
          <div class="col-12">
            <h1 class="title">PhotoEz</h1>
          </div>
          <div class="col-12">
            <div class="sub-title"><em>Solution for organizing your personal photo</em></div>
          </div>
        </div>
        <div class="row align-self-center hidden-md-down">
          <div class="col">
            <div class="lens-outer">
              <div class="lens-inner flower">
              </div>
            </div>
          </div>
        </div>
      </div>
      <div id="main-b" class="col-lg-6">
        <div class="row">
          <% if (!error) { %>
          <div id="sign-in-btn" class="col-6 active">
            <span class="glow">Sign up</span>
          </div>
          <div id="login-btn" class="col-6">
            <span class="glow">Login</span>
          </div>
          <% } else { %>
          <div id="sign-in-btn" class="col-6">
            <span class="glow">Sign up</span>
          </div>
          <div id="login-btn" class="col-6 active">
            <span class="glow">Login</span>
          </div>
          <% } %>
        </div>
        <div class="row">
          <% if (!error) { %>
          <div id="sign-up" class="col-12 tab-content active">
            <%- include('./login/signup.ejs') %>
          </div>
          <div id="login" class="col-12 tab-content">
            <%- include('./login/login.ejs') %>
          </div>
          <% } else { %>
          <div id="sign-up" class="col-12 tab-content">
            <%- include('./login/signup.ejs') %>
          </div>
          <div id="login" class="col-12 tab-content active">
            <%- include('./login/login.ejs') %>
          </div>
          <% } %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="offset-sm-6 col-sm-6">
        <footer><i class="fa fa-copyright" aria-hidden="true"></i>PhotoEz</footer>
      </div>
    </div>
  </div>
</div>
  <%- include('./partials/footer.ejs') %>
